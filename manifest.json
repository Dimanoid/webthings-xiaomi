{
    "author": "Dmitry V Mukhin",
    "content_scripts": [
        {
            "css": [
                "css/extension.css"
            ],
            "js": [
                "js/extension.js"
            ]
        }
    ],
    "description": "Mozilla Web things gateway addon for Xiaomi smart devices",
    "gateway_specific_settings": {
        "webthings": {
            "exec": "{nodeLoader} {path}",
            "primary_type": "adapter",
            "strict_max_version": "*",
            "strict_min_version": "0.10.0"
        }
    },
    "homepage_url": "https://github.com/Dimanoid/webthings-xiaomi",
    "id": "webthings-xiaomi",
    "license": "MIT",
    "manifest_version": 1,
    "name": "Xiaomi Adapter",
    "short_name": "Xiaomi",
    "version": "0.0.1",
    "web_accessible_resources": [
    ],
    "options": {
        "config": {
            "token": "",
            "address": "0.0.0.0",
            "port": 9898
        },
        "schema": {
            "type": "object",
            "required": [
                "token",
                "address",
                "port"
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "title": "Bind to address"
                },
                "port": {
                    "type": "number",
                    "title": "Gateway port"
                },
                "token": {
                    "type": "string",
                    "title": "Password",
                    "description": "How to get the password: https://www.domoticz.com/wiki/Xiaomi_Gateway_(Aqara)"
                }
            }
        }
    }
}
